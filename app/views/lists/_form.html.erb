<div class="container">
  <div class="alert">
    <% if @list.errors.present? %>
      <ul>
        <% @list.errors.each do |error, message| %>
          <li>
            <%= "#{error.capitalize}  #{message}" %>
          </li>
          <% end %>
      </ul>
      <% end %>
  </div>
  <h1>Write, Write and Write!</h1>
  <div class="form container">
    <%= form_for @list do |f| %>
    <table class="table-bordered">
      <tr>
        <th>
          <div class="form-group">
            <%= f.label :name, "Name" %>
          </div>
        </th>
        <td>
          <div class="form-group">
            <%= f.text_field :name %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <div class="form-group">
            <%= f.label :due_date, "Due Date" %>
          </div>
        </th>
        <td>
          <div class="form-group">
            <%= f.datetime_field :due_date, min: Time.now %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <div class="form-group">
            <%= f.label :note, "Note" %>
          </div>
        </th>
        <td>
          <div class="form-group">
            <%= f.text_area :note %>
          </div>
        </td>
      </tr>
    </table>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
    <br>
    <%= link_to  "Back to index", root_path, class: "btn btn-default" %>
  </div>
</div>