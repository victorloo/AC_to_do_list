<div class="container">
  <h1>What do you want to note?</h1>
  <h3><%= link_to  "New List", new_list_path, class: "btn btn-success" %></h3>
  <table class="table table-bordered">
    <tr>
      <th>Finish?</th>
      <th>#</th>
      <th>Name</th>
      <th>Due Date</th>
      <th>Detail</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
    <% @lists.each do |list| %>
    <tr>
      <td><input type="checkbox"></td>
      <td><%= list.id %></td>
      <td><%= list.name %></td>
      <td><%= list.due_date %></td>
      <td><%= link_to  "Detail", list_path(list) %></td>
      <td><%= link_to  "Edit", edit_list_path(list) %></td>
      <td><%= link_to  "Destroy", list_path(list), method: :delete, data:{confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </table>
</div>